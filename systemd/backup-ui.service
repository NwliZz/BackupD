[Unit]
Description=BackupD UI (Streamlit)
After=network-online.target
Wants=network-online.target

[Service]
User=backupui
Group=backupui
WorkingDirectory=/opt/backupd/ui
Environment=PYTHONUNBUFFERED=1
ExecStart=/opt/backupd/.venv/bin/streamlit run /opt/backupd/ui/app.py --server.address 127.0.0.1 --server.port 8050 --server.headless true
Restart=on-failure

[Install]
WantedBy=multi-user.target
